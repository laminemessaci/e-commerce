{% extends 'base.html.twig' %}

{% block title %}Nos produits - Aya Boutique{% endblock %}


{% block content %}
    <div class="container-fluid site ">

        <div class="row">
            <div class=" container  col-md-3 bg-transparent" style="margin-top: 160px">
                <h2>Filtre</h2>
                {{ form(form) }}

            </div>
            <div class="col-md-9">

                <div class="container titre">
                    <h1 class=" text-logo rounded-pill p-2 m-2  text-center "> {% block monTitre %} Nos produits{% endblock %} </h1>
                </div>

                <div class="row product-container">

                    {% for product in products %}
                        <div class=" col-md-3">
                            <div class="product-item text-center thumbnail ">

                                <a href="{{ path('product', {'slug': product.slug}) }}"><img
                                            src="{{ asset('uploads/'~product.illustration) }}"
                                            alt="{{ product.name }}"
                                            class="img-thumbnail"></a>
                                <div class="price">
                                    <span> {{ (product.price/100) | number_format(2, ',', '.') }} â‚¬</span>
                                </div>

                                <div class="caption">
                                    <h5>{{ product.name }}</h5>
                                    <div class="product-subtitle "><span>{{ product.subtitle }}</span></div>
                                </div>

                            </div>
                        </div>

                    {% endfor %}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
