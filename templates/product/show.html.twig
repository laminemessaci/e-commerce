{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Aya Boutique{% endblock %}


{% block content %}
    <div class="container rounded bg-white mt-4">

        <div class="  card-body col-md-12  rounded m-4 my-auto">
            <div class="product-item text-center thumbnail m-4">

                <a href="{{ path('product', {'slug': product.slug}) }}"><img
                            src="{{ asset('uploads/'~product.illustration) }}"
                            alt="{{ product.name }}"
                            class="img-fluid img-thumbnail"></a>

                <div class="caption  my-auto">
                    <h3 class="text-uppercase">{{ product.name }}</h3>
                    <div class="product-subtitle"><h4>{{ product.subtitle }}</h4>
                        <hr>
                        <div class="text-center container text-center">
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                    <div class=" price">
                        <span> {{ (product.price/100) | number_format(2, ',', '.') }} €</span>
                    </div>
                </div>
                <div class="buttons">
                    <a href=""
                       class="  btn-lg" role="button"><span
                                class="glyphicon glyphicon-shopping-cart"></span>
                        <button class="cart-button
                                                     rounded-pill"><span
                                    class="add-to-cart"> Ajouter</span>
                            <span class="added">Produit ajouté</span> <i
                                    class="fa fa-shopping-cart"></i> <i
                                    class="fa fa-square"></i></button>
                    </a>
                </div>

            </div>


        </div>

    </div>


{% endblock %}
