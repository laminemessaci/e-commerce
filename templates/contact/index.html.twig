{% extends 'base.html.twig' %}

{% block title %}Nous contacter - Aya Boutique{% endblock %}


{% block content %}

    <div class="wrapper">
        <div class="overlay">
            <div class="row d-flex justify-content-center align-items-center ">
                <div class="col-md-9">
                    <div class="contact-us text-center">
                        <h3>Contactez Nous</h3>
                        <p class="mb-5">Lorem ipsum is placeholder text commonly used in the graphic, print, and
                            publishing industries for previewing layouts and visual mockups.</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mt-5 text-center px-3">
                                    <div class="d-flex flex-row align-items-center"><span class="icons">
                                                <i class="fa fa-map-marker"></i>

                                            </span>
                                        <div class="address text-left"><span>Adresse</span>
                                            <p>461, Sugar camp, San jose, California, USA</p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mt-3"><span class="icons"><i
                                                    class="fa fa-phone"></i></span>
                                        <div class="address text-left"><span>Téléphone</span>
                                            <p>06 52 01 26 99</p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mt-3"><span class="icons"><i
                                                    class="fa fa-envelope-o"></i></span>
                                        <div class="address text-left"><span>Adresse</span>
                                            <p>contact@laminemessaci.com</p>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-6 ">
                                <div class="text-center px-1">
                                    <div class="forms p-4 py-5 ">
                                        <h3 class="text-white">ENVOYEZ UN MESSAGE</h3>
                                        <div class="mt-4 inputs">
                                            {{ form_row(form.prenom) }}
                                            {{ form_row(form.nom) }}
                                            {{ form_row(form.email) }}
                                            {{ form_row(form.contenu) }}
                                        </div>
                                        <div class="button mt-4 text-center">
                                            {{ form_row(form.submit) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}
    {% include'footer/footer.html.twig' %}
{% endblock %}