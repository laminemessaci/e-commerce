{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse {% endblock %}

{% block content %}

    <div class="container rounded  bg-white mt-5">
        <div class=" container-fluid p-2">
            <a href="{{ path('account_address') }}"><img src="{{ asset('assets/images/return.png') }}" width="26px"></a>
        </div>
        <div class="container bg m-4 text-center">
            <h1><a href=""><img src="{{ asset('assets/images/home.png') }}"
                                width="50px"></a> {% block monTitle %}GÃ©rer mes adresses{% endblock %}</h1>
        </div>

        <div class="row rounded">
            <div class="container rounded col-md-8">
                {{ form_start((form)) }}
                <div class="row  mb-4 col-md-12">
                    <div class="col-md-4 mr-2 ">{{ form_row(form.name) }}</div>
                    <div class="col-md-6 ">{{ form_row(form.company) }}</div>
                    <div class="col-md-4 mr-2"> {{ form_row(form.firstname) }}</div>
                    <div class="col-md-6  ">{{ form_row(form.lastname) }}</div>
                    <div class="col-md-10 ">{{ form_row(form.address) }}</div>
                    <div class="col-md-4 mr-2 "> {{ form_row(form.postal) }}</div>
                    <div class="col-md-6">{{ form_row(form.city) }}</div>
                    <div class="col-md-4 mr-2">{{ form_row(form.country) }}</div>
                    <div class="col-md-6">{{ form_row(form.phone) }}</div>
                    <div class="text-center col-md-10 mt-4">
                        <div class="text-center ">{{ form_row(form.submit) }}</div>
                    </div>
                </div>
                {{ form_end((form)) }}
            </div>
            <div class="col-md-3 mt-4">
                <img src="{{ asset('assets/images/address.jpg') }}"  class="img-fluid">
            </div>

        </div>

    </div>
{% endblock %}